          android:width="1dp"
          android:color="#76c1a6" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="8dp"
          android:top="8dp"
          android:right="8dp"
          android:bottom="8dp" />
    </shape>
  </item>

  <item>
