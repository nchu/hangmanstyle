<?xml version="1.0" encoding="utf-8"?>    
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <shape>
      <solid android:color="#5b937e" />
      <stroke
          android:width="1dp"
          android:color="#76c1a6" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="8dp"
          android:top="8dp"
          android:right="8dp"
          android:bottom="8dp" />
    </shape>
  </item>

  <item android:state_focused="true" >
    <shape>
      <solid android:color="#76c1a6" />
